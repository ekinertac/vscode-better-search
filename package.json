{
  "name": "better-search",
  "displayName": "Better Search",
  "description": "A better search alternative for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "ekinertac",
  "scripts": {
    "build": "npm run compile && npm run vscode:prepublish && vsce package -o dist",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "author": {
    "name": "Ekin Erta√ß"
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.87.0"
  },
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "pricing": "Free",
  "activationEvents": [
    "onCommand:better-search.findInProject",
    "onCommand:better-search.showModal"
  ],
  "license": "See license in LICENSE file",
  "main": "./dist/extension.js",
  "homepage": "https://github.com/ekinertac/vscode-better-search",
  "bugs": {
    "email": "ekinertac@gmail.com",
    "url": "https://github.com/ekinertac/vscode-better-search/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ekinertac/vscode-better-search.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "better-search.findInProject",
        "title": "Find in Project (BetterSearch)"
      },
      {
        "command": "better-search.showModal",
        "title": "Show Modal (Better Search)"
      }
    ],
    "keybindings": [
      {
        "command": "better-search.findInProject",
        "key": "shift+cmd+f"
      },
      {
        "command": "better-search.showModal",
        "key": "alt+ctrl+F"
      }
    ]
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  }
}
